@model UI.Models.Message.MineModel

@{
    ViewBag.Title = "Home Page";
}

<h1>我的消息</h1>

@using (Html.BeginForm())
{
    for (int i = 0; i < Model.Messages.Count; i++)
    {
   
        <div>
            @Html.CheckBoxFor(m=> Model.Messages[i].Selected)
            @Model.Messages[i].Content
            @Html.HiddenFor(m=>Model.Messages[i].Id)
        </div>
    }
    <button type="submit">提交</button>
}
<h3>@DateTime.Now</h3>
<hr />
@Html.Action("Reminder","Home",true)
<hr />
@Html.Partial("../Home/Reminder",new ViewDataDictionary { { "Id",1},{ "Name","老程"} })
