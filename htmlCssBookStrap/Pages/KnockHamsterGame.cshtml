    <audio pop-audio src="~/audio/弹簧.wav"></audio>
    <audio beat-audio src="/audio/敲打.wav"></audio>
    <audio beatError-audio src="~/audio/弹簧-短.wav"></audio>
    <audio bomb-audio src="~/audio/爆炸.mp3"></audio>
    <audio background-audio src="~/audio/刘士鸣 - 快乐的小青蛙（萌萌哒）.mp3"></audio>

