                    <td><img class="taft" taft="5" src="~/images/knockhamstergame/土堆.png" alt="taft"></td>
                    <td><img class="taft" taft="6" src="~/images/knockhamstergame/土堆.png" alt="taft"></td>
                </tr>
                <tr>
                    <td><img class="taft" taft="7" src="~/images/knockhamstergame/土堆.png" alt="taft"></td>
                    <td><img class="taft" taft="8" src="~/images/knockhamstergame/土堆.png" alt="taft"></td>
                    <td><img class="taft" taft="9" src="~/images/knockhamstergame/土堆.png" alt="taft"></td>
                </tr>
            </tbody>
        </table>




    </main>
